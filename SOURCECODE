#include <stdio.h>
#include <stdlib.h> 
#include <math.h> 
#include <time.h> 

void gamemechanic();
void loading();

int main(){

    char action;
    
    printf("Welcome to the Salty Spitoon!\n");
    printf("Do you wanna enter?\n Y/N");
    scanf(" %c", &action);

    if (action == 'Y' || action == 'y'){                                        // FIX THIS IF STATEMENT SO THAT MAIN GAME FUNCTIONS WORK
        return Game(); 
    } else {
        return main();
    }
                                                                                 
}

int Game(){

    char action;

    printf("Do you want to play Russian Roulette?\n Y/N");
    scanf(" %c", &action);

        if (action == 'Y' || action == 'y')
        {
            system("Reloading...");
        }
        else if (action == 'Y' || action == 'y')
        {
            loading();
            gamemechanic();
        }
        else
        {
            printf("Get out of here!\n");
            system("Reloading...");
            return main();
        }
    
}

void gamemechanic(){                                                                // OPTIMIZE THIS FUNCTION
    
            srand(time(NULL));

            int rnd = rand() % 6;

            if(rnd < 1){
                
                printf(" ---------------------------------   \n");
                printf(" #   #  ###  # #  #    ###    ###   \n");
                printf("   #    # #  # #   #   #  #   #     \n");
                printf("   #    # #  # #       ###    ###   \n");
                printf("   #    # #  # #       # #    #     \n");
                printf("   #    ###  ###       #   #  ###   \n");
                printf("  -------------------------------   \n");
                printf("      ###   ###   ##   ###          \n");
                printf("      #  #  #    #  #  #  #         \n");
                printf("      #  #  ###  ####  #  #         \n");
                printf("      #  #  #    #  #  #  #         \n");
                printf("      ###   ###  #  #  ###          \n");
                printf(" ---------------------------------  \n");
                
            } else {

                return gamemechanic();
        }    
}

void loading(){                                                                      // OPTIMIZE THIS FUNCTION
    
    printf(" --------------------------------------  \n");
    printf(" #    ###   ##   ###   ###  #  #  ####   \n");
    printf(" #    # #  #  #  #  #   #   ## #  #      \n");
    printf(" #    # #  ####  #  #   #   # ##  #  ##  \n");
    printf(" #    # #  #  #  #  #   #   #  #  #   #  \n");
    printf(" ###  ###  #  #  ###   ###  #  #  #####  \n");
    printf(" --------------------------------------  \n");

    return loading();
}
